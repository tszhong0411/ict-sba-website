generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(cuid())
  displayName String?
  username    String   @unique
  nickname    String?
  email       String   @unique
  password    String
  image       String?
  bio         String?
  score       Int      @default(0)
  createdAt   DateTime @default(now())
  Quiz        Quiz[]
}

model Quiz {
  type       String
  difficulty String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  userId     String
  answers    String[]
  User       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([userId, type, difficulty])
}
